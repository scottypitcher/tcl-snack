test dbpower-3.1 {dBPowerSpectrum command, -windowtype option} {
  set s [snack::sound snd -load ex1.wav]
  set tcl_precision 5
  set res [$s dBPowerSpectrum -start 1000 -end 2000 -skip 10 -fftlength 32 \
